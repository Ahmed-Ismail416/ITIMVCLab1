@model List<Department>

@{
    ViewData["Title"] = "All Departments";
}

<h2 class="mb-3">All Departments</h2>

<a asp-action="Add" class="btn btn-success mb-3">+ Add Department</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Dept ID</th>
            <th>Name</th>
            <th>Manager</th>
            <th>Location</th>
            <th>Branches</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DeptId</td>
                <td>@item.Name</td>
                <td>@item.Manager</td>
                <td>@item.Location</td>
                <td>@item.Branches</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DeptId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.DeptId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.DeptId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
